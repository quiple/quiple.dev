---
import {getEntry} from 'astro:content'
import Footer from '@/components/Footer.astro'
import Header from '@/components/Header.astro'
import Layout from '@/layouts/Layout.astro'

const {id} = Astro.params
if (id === undefined) return Astro.redirect('/404')
if (/[A-Z]+/.test(id)) return Astro.redirect(`/unicode/block/${id.toLowerCase()}`)
const char = await getEntry('unicodeBlocks', id.toUpperCase())
if (char === undefined) return Astro.redirect('/404')
---

<Layout title={`유니코드 블록 “${char.data.nameKo}”`}>
  <Header />
  <main class="container-x py-4">
    범위: {char.id}~{char.data.last}<br />
    이름: {char.data.nameKo}<br />
    이름: {char.data.name}
  </main>
  <Footer />
</Layout>
