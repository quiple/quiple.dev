---
import Footer from '@/components/Footer.astro'
import Header from '@/components/Header.astro'
import Content from '@/contents/galmuri.mdx'
import Layout from '@/layouts/Layout.astro'
import '@/styles/galmuri.sass'
---

<Layout
  title="Galmuri"
  description="작은 크기에서도 가독성 좋고 균형 있는 한글 비트맵 폰트."
>
  <Header />
  <main>
    <div class="title">
      <h1>
        <span class="g">G</span>
        <span class="a">a</span>
        <span class="l">l</span>
        <span class="m">m</span>
        <span class="u">u</span>
        <span class="r">r</span>
        <span class="i">i</span>
      </h1>
      <p>작은 크기에서도 가독성 좋고 균형 있는<br />한글 비트맵 폰트</p>
    </div>
    <Content />
  </main>
  <Footer />
</Layout>

<style lang="sass" is:global>
  main
    .title
      @include g(g9, 3)
      @apply flex flex-col justify-center gap-6 my-16
      h1
        @include g(g7, 9)
        @apply flex text-white pl-[--px] items-center leading-none mt-[calc(var(--px)_/_2)] cursor-default
        span
          @apply relative before:translate-y-[--px] active:translate-y-[--px] active:before:transform-none
          &::before, &::after
            @apply [-webkit-text-stroke:calc(var(--px)_*_2)_hsl(var(--galmuri))] dark:[-webkit-text-stroke:calc(var(--px)_*_2)_hsl(var(--galmuri-invert))] absolute -z-10 left-0
        .g
          @apply before:content-['G'] after:content-['G']
        .a
          @apply before:content-['a'] after:content-['a']
        .l
          @apply before:content-['l'] after:content-['l']
        .m
          @apply before:content-['m'] after:content-['m']
        .u
          @apply before:content-['u'] after:content-['u']
        .r
          @apply before:content-['r'] after:content-['r']
        .i
          @apply before:content-['i'] after:content-['i']
      p
        @apply [text-shadow:var(--px)_var(--px)_0_hsl(var(--shadow)),0_var(--px)_0_hsl(var(--shadow)),var(--px)_0_0_hsl(var(--shadow))] dark:[text-shadow:var(--px)_var(--px)_0_hsl(var(--shadow-dark)),0_var(--px)_0_hsl(var(--shadow-dark)),var(--px)_0_0_hsl(var(--shadow-dark))]
        --shadow: 240 10% 80%
        --shadow-dark: 240 10% 40%
    .tester
      @apply flex flex-col gap-[.5em] mt-[1em]
      .control
        @apply flex justify-between gap-[1em]
        button
          @include g(g7, 2)
        .shuffle::before
          @apply bg-current inline-block w-[1em] h-[1em] content-[''] mr-[--px]
          mask:
            image: $shuffle
            repeat: no-repeat
            position: center
        .left
          @apply flex flex-1 gap-[1em] items-center
          .tester-select, .tester-slider
            @apply basis-64
          .tester-font-size
            @include g(g7, 2)
            @apply tabular-nums
      textarea
        @apply px-[.5em] pt-[.25em] pb-[calc(.25em_-_var(--px))] leading-normal resize-none overflow-hidden
    [aria-roledescription=carousel]
      @include g(g7, 2)
      button
        @apply top-20 sm:top-[calc(13rem_/_2)] md:top-[calc(15rem_/_2)] lg:top-36 xl:top-40
      figure
        @apply table
        img
          @apply h-40 sm:h-52 md:h-60 lg:h-72 xl:h-80
        figcaption
          @apply table-caption caption-bottom mt-[--px]
    .sponsor
      @apply mt-[.5em] flex gap-[1em]
      svg
        @apply w-40 h-40
    .download
      @apply grid md:grid-cols-2 xl:grid-cols-3 2xl:grid-cols-4 gap-[1em] mb-[1em] mt-[.5em]
      .card
        @include g(g7, 2)
        @apply border-[length:--px] rounded-none
        h3
          @include g(g9, 2)
          @apply font-normal
        .buttons
          @apply flex flex-wrap gap-[.5em]
          a
            @include g(g7, 2)
            @apply text-foreground no-underline
            &[download]::before
              @apply bg-current inline-block w-[1em] h-[1em] content-[''] -mr-[--px]
              mask:
                image: $download
                repeat: no-repeat
                position: center
</style>
